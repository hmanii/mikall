/ip address add address=192.168.200.1/24 interface=ether1 network=192.168.200.0
/ip service set ssh address=192.168.200.0/24

/interface bridge add name=br-1 vlan-filtering=yes protocol-mode=rstp
add admin-mac=0E:0B:CC:DE:73:66 auto-mac=no name=br-1

/interface bridge set br-2 admin-mac=00:15:5D:40:D0:00 auto-mac=no

/interface bridge port add bridge=br-1 interface=ether2 internal-path-cost=10 path-cost=10
/interface bridge port add bridge=br-1 interface=ether3 pvid=21 internal-path-cost=10 path-cost=10

/interface vlan add name=vlan21 interface=br-1 vlan-id=21
/interface bridge vlan add bridge=br-1 vlan-ids=21 tagged=br-1,ether2 untagged=ether3

/ip address add address=192.168.21.10/24 interface=vlan21

/ip route add disabled=no distance=1 dst-address=0.0.0.0/0 gateway=192.168.210.10 routing-table=main scope=30 suppress-hw-offload=no target-scope=10

/ip firewall filter add action=accept chain=input in-interface=br-1 comment=Allow_in_br-1
/ip firewall filter add action=accept chain=output out-interface=br-1 comment=Allow_out_br-1
/ip firewall filter add action=accept chain=intput in-interface=vlan20 comment=Allow_IN_IN_vlan20
/ip firewall filter add action=accept chain=output out-interface=vlan20 comment=Allow_Out_Out_vlan20
/ip firewall filter add action=accept chain=forward in-interface=vlan20 comment=Allow_forward_in_vlan20
/ip firewall filter add action=accept chain=forward out-interface=vlan20 comment=Allow_forward_out_vlan20

/interface list add name=vlan20
/interface list member add interface=vlan20 list=BASE
/ip neighbor discovery-settings set discover-interface-list=BASE
/tool mac-server mac-winbox set allowed-interface-list=BASE
/tool mac-server set allowed-interface-list=BASE



