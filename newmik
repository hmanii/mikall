/interface bridge
add name=br-2 vlan-filtering=yes
add name=br-3 port-cost-mode=short vlan-filtering=yes
/interface ethernet
set [ find default-name=ether1 ] disable-running-check=no
set [ find default-name=ether2 ] disable-running-check=no
set [ find default-name=ether3 ] disable-running-check=no
set [ find default-name=ether4 ] disable-running-check=no
set [ find default-name=ether5 ] disable-running-check=no
/interface vlan
add interface=br-2 name=vlan20 vlan-id=20
add interface=br-3 name=vlan21 vlan-id=21
/ip pool
add name=pool_vlan20 ranges=192.168.20.50-192.168.20.200
add name=pool-vlan21 ranges=192.168.21.50-192.168.21.200
/ip dhcp-server
add address-pool=pool_vlan20 interface=vlan20 lease-time=3d name=dhcp_vlan20
add address-pool=pool-vlan21 interface=vlan21 lease-time=3d name=dhcp_vlan21
/port
set 0 name=serial0
set 1 name=serial1
/interface bridge port
add bridge=br-2 interface=ether2 internal-path-cost=10 path-cost=10
add bridge=br-2 interface=ether3 internal-path-cost=10 path-cost=10 pvid=20
add bridge=br-3 interface=ether5 internal-path-cost=10 path-cost=10 pvid=21
/interface bridge vlan
add bridge=br-2 tagged=br-2,ether2 untagged=ether3 vlan-ids=20
add bridge=br-3 tagged=br-3 untagged=ether5 vlan-ids=21
/ip address
add address=192.168.200.1/24 interface=ether1 network=192.168.200.0
add address=192.168.20.1/24 interface=vlan20 network=192.168.20.0
add address=192.168.21.1/24 interface=vlan21 network=192.168.21.0
/ip dhcp-server network
add address=192.168.20.0/24 dns-server=1.1.1.1,8.8.8.8 gateway=192.168.20.1 netmask=24
add address=192.168.21.0/24 dns-server=8.8.8.8 gateway=192.168.21.1 netmask=24
/ip firewall filter
add action=accept chain=input comment=br-2InputAccept in-interface=br-2
add action=accept chain=output comment=br-2OutputAccept out-interface=br-2
add action=accept chain=output comment=Allow_all_input_from_vlan20 out-interface=vlan20
add action=accept chain=forward comment=Allow_all_output_forward_to_vlan20 in-interface=vlan20
add action=accept chain=forward comment=Allow_all_forward_from_vlan20 out-interface=vlan20
add action=accept chain=input comment=Allow_all_to_vlan20 in-interface=vlan20
add action=accept chain=input in-interface=br-3
add action=accept chain=output out-interface=br-3
add action=accept chain=input comment=vlan21-in in-interface=vlan21
add action=accept chain=output comment=vlan21-out out-interface=vlan21
/ip service
set ssh address=192.168.200.0/24
/tool traffic-monitor
add comment=testdhcp interface=br-3 name=traf1
